<div class="row col-auto">

  <div class="col-md-6">

    <h2><%= t('.sign_up') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, placeholder: "Nombre completo", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <label class="sr-only" for="inlineFormInputGroup">Nombre de usuario</label>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">@</div>
          </div>
          <%= f.text_field :username, placeholder: "Nombre de usuario" , class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.text_field :location, placeholder: "Ubicación", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_area :bio, placeholder: "Cuéntanos algo sobre ti...", class: "form-control" %>
      </div>

      <div class="form-group">
        Añadir foto de perfil:&nbsp&nbsp&nbsp&nbsp<%= f.file_field :avatar %>
      </div>
      
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t('.sign_up'), class: "btn btn-success" %>
      </div>
    <% end %>

    <br>
    
    <%= render "devise/shared/links" %>

    <br>
  
  </div>
  <div class="col-md-6">

</div>